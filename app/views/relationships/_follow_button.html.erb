<% unless current_user == user %>
  <% if current_user.following?(user) %>
    <%= form_for(current_user.relationships.find_by(follower_id: user.id), class: 'user-edit-btn', html: { method: :delete }) do |f| %>
      <%= hidden_field_tag :follower_id, user.id %>
      <%= f.submit 'フォロー解除', class: 'user-edit-btn-text' %>
    <% end %>
  <% else %>
    <%= form_for(current_user.relationships.build, class: 'user-edit-btn') do |f| %>
      <%= hidden_field_tag :follower_id, user.id %>
      <%= f.submit 'フォロ-する', class: 'user-edit-btn-text' %>
    <% end %>
  <% end %>
<% end %>